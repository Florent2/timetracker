%table
  %tr
    %th Name
    %th Project
    %th Status
    %th Duration
    %th Estimation
    %th Action

  - tasks.group_by(&:last_update_on).each do |date, tasks|  
    %tr.date
      %td= date.to_s :human
    - tasks.each do |task|
      %tr
        %td= link_to task.name, task
        %td= link_to task.project.name, task.project
        %td= task.status
        %td= task.duration
        %td= task.estimation
        %td= if task.running? then interrupt_link(task) else resume_link(task) end
          