%p
  %b Name:
  = @task.name
%p
  %b Project:
  = link_to @task.project.name, @task.project
%p
  %b Duration:
  = @task.duration
  hours
%p
  %b Estimation:
  = @task.estimation
  hours
%p
  %b Status:
  = @task.status
%p
  - if @task.running?
    = interrupt_link @task, :class => "button"
  - else
    = resume_link @task, :class => "button"
  = link_to 'edit', edit_task_path(@task), :class => "button"
  = link_to 'destroy', @task, :confirm => 'Are you sure?', :method => :delete, :class => "button"

- if @task.sessions.present?
  %h2 Sessions
  %ul
    - @task.sessions.each do |session|
      %li
        - if session.finish?
          = "From #{session.start.to_s(:short)} to #{session.finish.to_s(:short)}"
        - else
          = "Running since #{session.start.to_s(:short)}"
        %br
        = "Duration = #{session.duration} hours"
= link_to 'Back', tasks_path
